{
  "editor.insertSpaces": true,
  "typescript.tsc.autoDetect": "off",
  "typescript.preferences.quoteStyle": "single",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/out": true,
    "**/.vscode-test": true,
    ".eslintrc.json": true,
    ".vscodeignore": true,
    "**/package-lock.json": true
  }
}
